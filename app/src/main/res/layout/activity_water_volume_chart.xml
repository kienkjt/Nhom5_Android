<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_chart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop= "40dp">

    <TextView
        android:id="@+id/tvChartTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Biểu đồ lượng nước đã uống (1 tuần)"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_centerHorizontal="true" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/waterChart"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/tvChartTitle"
        android:layout_above="@id/tvNote"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Đơn vị: mL/ngày · Tuần mới tính từ Thứ Hai"
        android:textSize="15sp"
        android:textColor="#777777"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quay lại"
        android:layout_gravity="center"
        />


</LinearLayout>
