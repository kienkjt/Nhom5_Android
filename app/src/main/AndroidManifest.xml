<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Quyền cần cho Google Fit -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />

    <!-- Nếu sau này cần kết nối BLE (thiết bị đeo thông minh) thì bỏ comment các quyền này -->
    <!--
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" tools:ignore="BluetoothPermission" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" tools:ignore="BluetoothPermission" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HealthTracking">

        <!-- StepActivity chạy đầu tiên -->
        <activity
            android:name=".step.StepActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- AuthActivity (đăng nhập Google Fit) -->
        <activity
            android:name=".auth.AuthActivity"
            android:exported="false" />

        <!-- MainActivity (menu chính) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Màn hình theo dõi cân nặng -->
        <activity
            android:name=".weight.WeightTrackerActivity"
            android:exported="false" />

        <!-- Màn hình nước -->
        <activity
            android:name=".water.water_volume_chart"
            android:exported="false" />
        <activity
            android:name=".water.water_Monitoring"
            android:exported="false" />

        <!-- Khai báo Google Play Services -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>
